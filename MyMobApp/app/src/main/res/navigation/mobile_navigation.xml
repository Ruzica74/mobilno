    <fragment
        android:id="@+id/nav_news"
        android:name="com.example.mymobapp.ui.news.NewsFragment"
        android:label="@string/menu_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.mymobapp.ui.settings.SettingsFragment"
        android:label="@string/menu_setings"
