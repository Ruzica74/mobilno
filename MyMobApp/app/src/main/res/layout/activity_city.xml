<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CityActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/divider23"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

            <TextView
                android:id="@+id/city_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <View
                android:id="@+id/divider22"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

            <TextView
                android:id="@+id/city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <View
                android:id="@+id/divider21"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

            <ImageView
                android:id="@+id/city_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:id="@+id/divider20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

            <ImageView
                android:id="@+id/city_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:id="@+id/divider26"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

            <ImageView
                android:id="@+id/city_image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:id="@+id/divider24"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

            <View
                android:id="@+id/divider25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="?android:attr/divider" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>